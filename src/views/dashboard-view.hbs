{{> menu active="dashboard"}}

<section class="section">
  <h1 class="title is-3">Dashboard</h1>
</section>
<section class="section">
  <h2 class="title is-4">My PlaceMarks</h2>
  <table class="table" style="width: 100%">
    <thead>
      <th>Name</th>
      <th>Location</th>
      <th>Lat</th>
      <th>Long</th>
      <th></th>
    </thead>
    <tbody>
    {{# each myPlaceMarks}}
      <tr>
        <td>{{name}}</td>
        <td>{{location}}</td>
        <td>{{latitude}}</td>
        <td>{{longitude}}</td>
        <td></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>
<section class="section">
  <h2 class="title is-4">All PlaceMarks</h2>
  <table class="table" style="width: 100%">
    <thead>
    <th>Name</th>
    <th>Location</th>
    <th>Lat</th>
    <th>Long</th>
    <th></th>
    </thead>
    <tbody>
    {{# each othersPlaceMarks}}
      <tr>
        <td>{{name}}</td>
        <td>{{location}}</td>
        <td>{{latitude}}</td>
        <td>{{longitude}}</td>
        <td></td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</section>

